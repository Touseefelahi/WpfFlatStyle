        <Setter Property="MinWidth" Value="20" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Padding" Value="2" />
        <Setter Property="Margin" Value="5,6,5,5" />
        <Setter Property="local:Placeholder.Value" Value=" " />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Grid MinHeight="{TemplateBinding Height}" HorizontalAlignment="Stretch">
                        <TextBlock
                            x:Name="topText"
                            Margin="0,-6,0,0"
                            Padding="3,0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            Panel.ZIndex="1"
                            Background="{TemplateBinding Background}"
                            Text="{TemplateBinding local:Placeholder.Value}"
                            Visibility="Visible">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding Path=(local:Placeholder.Value), RelativeSource={RelativeSource TemplatedParent}}" Value=" ">
                                            <Setter Property="Padding" Value="0" />
                                            <Setter Property="Margin" Value="0" />
                                            <Setter Property="Width" Value="0" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>

                        <Border
                            x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="3">

                            <ScrollViewer
                                x:Name="PART_ContentHost"
                                Margin="2"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                Focusable="False">
                                <ScrollViewer.InputBindings>
                                    <KeyBinding
                                        Key="Return"
                                        Command="{x:Static local:Command.ReturnCommand}"
                                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type TextBox}}}" />
                                    <KeyBinding
                                        Key="Return"
                                        Command="{Binding Path=(local:SetCommand.Value), RelativeSource={RelativeSource TemplatedParent}}"
                                        CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type TextBox}}, Path=Text}" />
                                </ScrollViewer.InputBindings>
                            </ScrollViewer>
                        </Border>

                        <TextBlock
                            x:Name="PlaceholderLabel"
                            Margin="10,0"
                            VerticalAlignment="Center"
                            FontStyle="Italic"
                            Opacity="0.8"
                            Text="{TemplateBinding local:Placeholder.Value}"
                            Visibility="Hidden" />
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Text" Value="">
                            <Setter TargetName="topText" Property="Visibility" Value="Hidden" />
                            <Setter TargetName="PlaceholderLabel" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="IsKeyboardFocused" Value="true">
                            <Setter TargetName="topText" Property="Visibility" Value="Visible" />
                            <Setter TargetName="PlaceholderLabel" Property="Visibility" Value="Hidden" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="{DynamicResource DisabledBrush}" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style BasedOn="{StaticResource TextBoxBase}" TargetType="{x:Type TextBox}" />
</ResourceDictionary>